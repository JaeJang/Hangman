<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    
    <style>
        tr{
            font-size:2rem
        }
    </style>

    <title>Hangman</title>

</head>
<body class="text-center">

    <table class="table" style="width:auto;margin:auto;">
        <thead>
            <tr>
                <th scope="col">Rank</th>
                <th scope="col">Name</th>
                <th scope="col">Score</th>
                <th scope="col">Life</th>
            </tr>
        </thead>
        <tbody id="table_body" style="font-size:2rem"></tbody>
        <% if(ranks.length > 0){
                let rank = 1;
                let pre = ranks[0].score; 
                if(rid && rid == ranks[0].id){ %>
                <tr style="color:red;">
                <% } else if(ranks[0].username == username) { %>
                <tr style='color:blue'>
                <% } else { %>
                <tr>
                <% } %>
                    <th><%=rank%></th>
                    <td><%=ranks[0].username%></td>
                    <td><%=ranks[0].score%></td>
                    <td><%=ranks[0].life%></td>
                </tr>
                <%
                for(let i = 1; i < ranks.length; ++i){ 
                    let score = ranks[i].score;
                    if(score == pre){
                        if(ranks[i].life != ranks[i-1].life)
                            ++rank;
                    }
                    else
                        ++rank;
                if(rid && rid == ranks[i].id){ %>
                    <tr style="color:red; font-weight:bold; font-style:italic;">
                    <% } else if(ranks[i].username == username) { %>
                    <tr style='color:blue'>
                    <% } else { %>
                    <tr>
                    <% } %>
                    <th><%=rank%></th>
                    <td><%=ranks[i].username%></td>
                    <td><%=ranks[i].score%></td>
                    <td><%=ranks[i].life%></td>
                </tr>
                    <% pre = score;
                }
            } %>
        </table>
    <script>

    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</body>
</html>